doctype html
html(lang="en")
	head
		title Temperature - Sensor
		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no , minimal-ui")
		link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700" rel="stylesheet")
		link(href='css/stlye.css', rel='stylesheet')
	body
		div#app
			div#wrapper
				section#display
					p#celsius 0°
					svg(xmlns="http://www.w3.org/2000/svg", viewbox="0 0 224.52 448", id="celsius-logo")
						g
							path(d="M192.15,257.09V80.19A80.05,80.05,0,0,0,112.09,0c-44.28,0-80,34.5-80,78.78V256C12.38,276.26,0,305.28,0,335.81a112.26,112.26,0,1,0,192.15-78.72ZM112.26,416A80.32,80.32,0,0,1,32,335.81c0-21.19,8.62-42.67,23-57.47L64.13,269V78.78c0-26.23,21.07-46.78,48-46.78a48.18,48.18,0,0,1,48.05,48.19v190l9.14,9.33a80.11,80.11,0,0,1-57,136.52Z")
							g
								rect(id="celsius-val", x='96.26', y='293', width='32', height='0')
							g
								circle(cx="112.26", cy="335.33", r="48")
				section#filter
					input(type="number", id="min-celsius", min="0", max="100", placeholder="Alsó határérték")
					input(type="number", id="max-celsius", min="0", max="100", placeholder="Felső határérték")
				section#button
					input(type="button", id="setCelsius" , value="Beállít")
				section#filterData
					p#minV
					p#maxV
			section#Notification
				p#notify Engedélyezem a hőmérséklet értesítést
				div#enabled
					img(src="images/checked.svg", alt="Engedélyezett értesítést")
					p Hőmérséklet értesítések bekapcsolva
				div#disabled
					img(src="images/disabled.svg", alt="Engedélyezett értesítést")
					p Hőmérséklet értesítések kikapcsolva	



		script(src="/socket.io/socket.io.js")
		script(src="js/script.js")